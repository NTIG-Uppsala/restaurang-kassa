<Window x:Class="POS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="itemButtonList" Margin="15,15,600,15"/>
        <StackPanel HorizontalAlignment="Left" Margin="525,0,0,0" Orientation="Vertical" VerticalAlignment="Center">
            <ListBox x:Name="cartBox" Width="260" Height="217"/>

            <Label Content="Total Price" x:Name="totalPrice" Width="250"/>
            <Button Content="Pay" Height="150" Width="250" Click="Pay"/>
        </StackPanel>

    </Grid>
</Window>
